<div id= "watch-decision">
  <form id ="decision" method = "post" action="/decision/movie">
    <input type = "hidden" name = "title_movie" value  = "{{body.title}}">
    <input type = "hidden" name = "genre_movie" value  = "{{genre}}">
    <input type = "hidden" name = "rating_movie" value  = "{{body.vote_average}}">
    <input type = "hidden" name = "year_movie" value = "{{body.release_date}}">
    <input type = "submit" name = "user_watch" value = "Save">
    <input type = "submit" name = "user_watch" value = "Pick again">
    <input id = "movie_director" type = "hidden" name = "director_movie">
    <input id = "poster_link" type = "hidden" name = "poster_movie">
  </form>
</div>

<div id= "watch-tv">
  <form id ="decision" method = "post" action="/decision/show">
    <input type = "hidden" name = "title_movie" value  = "{{body.name}}">
    <input type = "hidden" name = "genre_movie" value  = "{{genre}}">
    <input type = "hidden" name = "rating_movie" value  = "{{body.vote_average}}">
    <input type = "hidden" name = "year_movie" value = "{{body.first_air_date}}">
    <input type = "submit" name = "user_watch" value = "Watch">
    <input type = "submit" name = "user_watch" value = "Pick again">
    <input id = "poster_tv" type = "hidden" name = "poster_movie">
  </form>
</div>

