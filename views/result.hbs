<div id = "movie-picked" value="{{body.id}}">
  <input type = "hidden" value = "{{body.vote_average}}" id = "rating">
  <input type = "hidden" value = "{{tv}}" id = "tv-selected">
  <table id = "info-table">
    <tr>
      {{#if tv}}
        <td class = "header"> Title: </td>
        <td id = "title">{{body.name}}</td>
      {{/if}}
      {{#if movie}}
        <td class = "header"> Title: </td>
        <td id = "title">{{body.title}}</td>
      {{/if}}
    </tr>
    <tr>
      {{#if tv}}
        <td class = "header"> Release date: </td>
        <td id = "year">{{body.first_air_date}}</td>
      {{/if}}
      {{#if movie}}
      <td class = "header"> Release date: </td>
      <td id = "year">{{body.release_date}}</td>
      {{/if}}
    </tr>
    <tr>
      {{#if movie}}
      <td class = "header"> Director: </td>
      <td id = "director"></td>
      {{/if}}
    </tr>
    <tr>
      <td class = "header"> Genre: </td>
      <td id = "genre">{{genre}}</td>
    </tr>
    <tr>
      <td class = "header"> Actors: </td>
      <td id = "actors"></td>
    </tr>
    <tr>
      <td class = "header">Rating:</td>
      <td id = "s-rating"></td>
    </tr>
  </table>
</div>

